<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F9FC"
    android:padding="24dp">

    <LinearLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- TITLE-GPA CALCULATOR -->
        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GPA Calculator"
            android:textColor="#111827"
            android:textSize="26sp"
            android:textStyle="bold"
            android:fontFamily="@font/poppinsbold"
            android:layout_marginBottom="16dp" />

        <!-- Enter number of subjects -->
        <EditText
            android:id="@+id/subjectCountEditText"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:hint="Enter number of subjects"
            android:inputType="number"
            android:padding="14dp"
            android:background="@drawable/edittext_background"
            android:textSize="16sp"
            android:fontFamily="@font/poppinsregular"
            android:layout_marginBottom="12dp" />

        <!-- Button to Generate Table -->
        <Button
            android:id="@+id/generateButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Generate Table"
            android:textColor="#FFFFFF"
            android:backgroundTint="#6C63FF"
            android:paddingHorizontal="32dp"
            android:paddingVertical="12dp"
            android:layout_marginBottom="24dp"
            android:textSize="16sp"
            android:fontFamily="@font/poppinsmedium" />

        <!-- Table -->
        <LinearLayout
            android:id="@+id/tableHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Course Name"
                android:textSize="14sp"
                android:textColor="#111827"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Marks Scored"
                android:textSize="14sp"
                android:textColor="#111827"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Credits"
                android:textSize="14sp"
                android:textColor="#111827"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Dynamic Table -->
        <LinearLayout
            android:id="@+id/subjectTable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

        <!-- Calculate GPA Button -->
        <Button
            android:id="@+id/calculateGpaButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calculate GPA"
            android:textColor="#FFFFFF"
            android:backgroundTint="#6C63FF"
            android:paddingHorizontal="32dp"
            android:paddingVertical="12dp"
            android:layout_marginTop="24dp"
            android:textSize="16sp"
            android:fontFamily="@font/poppinsmedium" />

        <!-- Reset Button -->
        <Button
            android:id="@+id/resetButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reset"
            android:textColor="#FFFFFF"
            android:backgroundTint="#6C63FF"
            android:paddingHorizontal="32dp"
            android:paddingVertical="12dp"
            android:layout_marginTop="16dp"
            android:textSize="16sp"
            android:fontFamily="@font/poppinsmedium" />

        <!-- Printing GPA -->
        <TextView
            android:id="@+id/gpaResultText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your GPA: "
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#111827"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/poppinsbold" />

        <TextView
            android:id="@+id/about"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Made by Anika."
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="32dp"/>

    </LinearLayout>
</ScrollView>
